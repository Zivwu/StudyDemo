<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/fl_bg"
        android:layout_width="266dp"
        android:layout_height="156dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="125dp">

        <ImageView
            android:id="@+id/iv_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:src="@mipmap/room_pk_bg_score" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <TextView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="请为此选手打分"
                android:textColor="#202020"
                android:textSize="14sp" />


            <LinearLayout
                android:id="@+id/ll_num_picker"
                android:layout_width="wrap_content"
                android:layout_height="27dp">

                <TextView
                    android:id="@+id/tv_num"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"
                    android:textColor="#202020"
                    android:textSize="14sp"
                    tools:text="10" />

                <ImageView
                    android:layout_width="17dp"
                    android:layout_height="8dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="4dp"
                    android:src="@mipmap/room_pk_score_triangle_be7400" />

            </LinearLayout>


        </LinearLayout>


        <Button
            android:id="@+id/btn_vote"
            android:layout_width="78dp"
            android:layout_height="34dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="16dp"
            android:background="@mipmap/room_pk_btn_vote"
            android:text="确定"
            android:textColor="#ffffff"
            android:textSize="14sp" />

    </RelativeLayout>


    <ImageView
        android:layout_width="81dp"
        android:layout_height="88dp"
        android:layout_alignBottom="@+id/fl_bg"
        android:layout_alignLeft="@+id/fl_bg"
        android:layout_marginLeft="-39dp"
        android:scaleType="centerInside"
        android:src="@mipmap/room_pk_colour_bar" />

    <ImageView
        android:layout_width="361dp"
        android:layout_height="159dp"
        android:layout_centerHorizontal="true"
        android:scaleType="centerInside"
        android:src="@mipmap/room_pk_head" />

    <ImageView
        android:id="@+id/iv_label"
        android:layout_width="40dp"
        android:layout_height="47dp"
        android:layout_alignRight="@+id/fl_bg"
        android:layout_alignTop="@+id/fl_bg"
        android:layout_marginRight="16dp"
        android:src="@mipmap/room_pk_label_score" />


</RelativeLayout>